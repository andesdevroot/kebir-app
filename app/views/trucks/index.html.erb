<p id="notice"><%= notice %></p>

<h1>Listado de Camiones KEBIR</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Marca</th>
      <th>Patente</th>
      <th>Año</th>
      <th>Modelo</th>
      <th>Nombre Chofer</th>
      <th>Dueño</th>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.tipo %></td>
        <td><%= truck.marca %></td>
        <td><%= truck.patente %></td>
        <td><%= truck.año %></td>
        <td><%= truck.modelo %></td>
        <td><%= truck.nombre_chofer %></td>
        <td><%= truck.dueno %></td>
        <td><%= truck.descripcion %></td>
        <td><%= link_to 'Ver', truck %></td>
        <td><%= link_to 'Editar', edit_truck_path(truck) %></td>
        <td><%= link_to 'Borrar', truck, method: :delete, data: { confirm: 'Está seguro de borrar el camión?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

