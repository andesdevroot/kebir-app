<p id="notice"><%= notice %></p>

<h1>Camions</h1>

<table>
  <thead>
    <tr>
      <th>Peso carga</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @camions.each do |camion| %>
      <tr>
        <td><%= camion.peso_carga %></td>
        <td><%= link_to 'Show', camion %></td>
        <td><%= link_to 'Edit', edit_camion_path(camion) %></td>
        <td><%= link_to 'Destroy', camion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

